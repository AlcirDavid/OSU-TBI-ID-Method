<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Step1Activity" >

    <ImageButton
        android:id="@+id/step_1_question_yes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/step_1_question"
        android:layout_marginTop="50dp"
        android:layout_toLeftOf="@+id/step_1_title"
        android:background="#ffffff"
        android:src="@drawable/yes_50" />

    <ImageButton
        android:id="@+id/step_1_question_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/step_1_question_yes"
        android:layout_toRightOf="@+id/step_1_title"
        android:background="#ffffff"
        android:src="@drawable/no_50" />

    <TextView
        android:id="@+id/step_1_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="98dp"
        android:text="@string/step_1"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/step_1_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/step_1_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:ems="10"
        android:text="@string/step_1_question1" />

</RelativeLayout>
